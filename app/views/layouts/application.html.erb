<!DOCTYPE html>
<html>
<head>
  <title>ComicCon</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<style>
	.colorlink{
		color: yellow;
	}
</style>
<body>
<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <div class="navbar-brand">
      	<%= link_to "ComicCon", root_path, :class => 'colorlink' %>
      </div>
    </div>
    <div class="sider">
	    <ul class="nav navbar-nav">
	      <li class="active"><%= link_to 'Home', posts_path%></li>
	      <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">About<span class="caret"></span></a>
	        <ul class="dropdown-menu">
	          <li><a href="#">ComicCon</a></li>
	          <li><a href="#">Events</a></li>
	          <li><a href="#">NewsFeed</a></li>
	        </ul>
	      </li>
	    </ul>
	    <% if user_signed_in? %>
	    	<ul class="nav navbar-nav navbar-right">
	    		<li><%= link_to 'Friends', my_friends_path, :class => 'navbar-link'%></li>
          <li><%= link_to 'Profile', profile_path(current_user), :class => 'navbar-link'%></li>
					<li><%= link_to 'New Character', new_post_path, :class => 'navbar-link'%></li>
					<li><%= link_to 'account', edit_user_registration_path, :class => 'navbar-link'%></li>
					<li><%= link_to 'Sign out', destroy_user_session_path, method: :delete, :class => 'navbar-link'%>
					</li>
				</ul>
			<% else %>
		    <ul class="nav navbar-nav navbar-right">
		      <li><span class="glyphicon glyphicon-user"></span><%= link_to 'Sign Up', new_user_registration_path, :class => 'navbar-link'%></li>
		      <li><span class="glyphicon glyphicon-log-in"></span><%= link_to 'Sign In', new_user_session_path, :class => 'navbar-link'%></li>
		    </ul>
		  <% end %>
    </div>
  </div>
</nav>


<div class="container">
<%# this is for the flash notice %>
<% flash.each do |name, msg| %>
	<%= content_tag :div, msg, class: "alert alert-info" %>
<% end %>
<%= yield %>

</div>
</body>
</html>

<%= render 'users/lookup' %>

<% if @friendships.size > 0 %>
	<div class="col-md-8">
		<%#= render "lookup" %> 
		<table class="table table-striped">
			<thead>
				<tr>
					<th colspan="3" class="page-header">
						<h2> Friends </h2>
					</th>
				</tr>
				<tr>
					<td>Email</td>
		      <td>Action</td>
				</tr>
			</thead>
			<tbody>
				<% @friendships.each do |friend| %>
					<tr>
						<td><%= friend.email %></td>
						<td>
							<%= link_to "View Profile", user_path(friend), class:'btn btn-primary btn-xs' %>
							<%= link_to "Unfriend", friendship_path(friend), 
							              :method => :delete,
							              class:'btn btn-xs btn-danger'%>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>

<% else %>
	<div class="row col-lg-12">
		<p> you don't have friends :P </p>
	</div>

<% end %>

